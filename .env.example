# Порт сервера (по умолчанию 8080)
PORT=8080

# Базовый URL сайта (для ссылки в письме)
BASE_URL=http://localhost:8080

# Путь к файлу резюме (PDF). Скачивание возможно только один раз по одноразовой ссылке.
RESUME_PATH=./resume.pdf

# Пароль входа в админку: кто запросил резюме и кто скачал
ADMIN_SECRET=your_admin_password

# SMTP для отправки писем. Если не заданы — ссылка и код выводятся в лог
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=your_password
